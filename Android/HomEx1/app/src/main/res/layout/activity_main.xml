<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#ffaca2ff">


    <!--Splitting the screen to vertical cells-->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <!--Splitting the first vertical cell to horizontal cells, for each button.-->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Right button -->
            <Button
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="1"
                android:id="@+id/cmdRight"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="67dp"
                android:layout_marginTop="10dp"
                android:background="#ff77fffd" />

            <!-- Left button -->
            <Button
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="2"
                android:id="@+id/cmdLeft"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="53dp"
                android:layout_marginTop="10dp"
                android:background="#ff54fffa"
                android:layout_marginLeft="100dp" />
        </LinearLayout>

        <!-- Text view for game instructions -->
        <TextView
               android:layout_width="200dp"
               android:layout_height="50dp"
               android:layout_marginTop="40dp"
               android:layout_marginLeft="65dp"
               android:id="@+id/instructions"
               android:textColor="#ffff140b" />

        <!-- Text view for new score time -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/newScoreTime"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="64dp"
            android:background="#ff45fdff"
            android:textColor="#ffff170b"
            android:textStyle="bold|italic"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="65dp" />

        <!-- Text view for lowest time scored -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/highScoreTime"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="64dp"
            android:background="#ff45fdff"
            android:textColor="#ffff170b"
            android:textStyle="bold|italic"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            style="re"
            android:editable="false" />
    </LinearLayout>


</RelativeLayout>
