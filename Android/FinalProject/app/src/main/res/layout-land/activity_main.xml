<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.kepitapp.finalproject.MainActivity"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:weightSum="1">

    <com.kepitapp.finalproject.ScreenView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/screenView"/>

    <TextView
    android:layout_width="match_parent"
    android:layout_height="39dp"
    android:gravity="center"
    android:text="Break SEA-Masher!"
    android:fontFamily="@string/title_activity_main"
    android:textStyle="bold|italic"
        android:textSize="35dp"
        android:textIsSelectable="true"
        android:layout_weight="0.19" />

    <Button
        android:layout_width="131dp"
        android:layout_height="wrap_content"
        android:text="Play!"
        android:id="@+id/cmdStartGame"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/btn_default"
        android:layout_marginTop="15dp"/>

    <Button
        android:layout_width="131dp"
        android:layout_height="wrap_content"
        android:text="High scores"
        android:id="@+id/cmdScores"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/btn_default"
        android:layout_marginTop="25dp"/>

    <Button
        android:layout_width="131dp"
        android:layout_height="wrap_content"
        android:text="Instruction"
        android:id="@+id/cmdInstruction"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/btn_default"
        android:layout_marginTop="25dp"/>




</LinearLayout>
